<main class="max-w-[1000px] relative overflow-x-hidden">
  <section
    class="flex flex-col items-center sm:flex-row sm:items-start sm:mt-5 md:justify-between lg:space-x-[4rem]"
  >
    <div
      class="flex items-center justify-center flex-col sm:max-w-[350px] md:max-w-[400px] lg:max-w-[500px]"
    >
      <div class="mt-7">
        <h3 class="text-green text-5xl font-black text-center">
          Get accurate
        </h3>
        <div class="flex items-center justify-center">
          <p class="mt-2 w-[300px] text-center text-2xl">
            daily market prices for your crops in your Whatsapp.
          </p>
        </div>
        <p class="mt-8 text-center font-light text-xl">
          Sign up your <span class="text-g">Whatsapp Number</span> to get the daily price notifications from 4
          Zambian markets
        </p>
      </div>

      <div class="mt-5 sm:space-x-[20px]">
        <a href="#signUp">
          <button
            class="px-4 py-1 bg-green rounded-md cursor-pointer text-white font-bold text-lg md:w-[120px]"

---
const { imageUrl, caption, color, description } = Astro.props;
---

<div
  class="mt-[35px] w-[244px] lg:w-[300px] md:mt-0 flex flex-col items-center justify-center"
>
  <div class={`w-[244px] lg:w-[300px] rounded-md bg-${color} `}>
    <div class="w-[244px] lg:w-[300px] h-[180px] lg:h-[200px]">
      <img
        src={imageUrl}
        alt=""
        class="w-[244px] lg:w-[300px] h-[180px] lg:h-[200px] object-cover rounded-t-md block"
      />
    </div>

    <h3 class="text-white text-center text-lg md:py-3">{caption}</h3>
  </div>
  <article class="text-center mt-5 md:mt-2 md:text-md">{description}</article>
</div>

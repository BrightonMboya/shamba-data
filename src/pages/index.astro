---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Welcome to Shamba Data.">
  <main class="font-sans">
    <Hero />

    <section
      class="mt-[2rem] pl-5 md:ml-[2rem] sm:mt-[5rem] sm:flex sm:justify-between sm:items-start"
    >
      <div class="flex gap-2">
        <div>
          <div class="bg-gold w-[23px] h-[70px]"></div>
          <div class="w-[23px] h-[40px] bg-green"></div>
        </div>

        <div class="flex-col flex">
          <h3 class="w-[250px] text-green font-light text-xl">
            Get the most accurate Data with
          </h3>
          <strong class="text-gold text-xl">Shamba Data</strong>
          <strong class="text-xl text-green">We are here for you!</strong>
        </div>
      </div>

      <div class="">
        <div class="w-[350px] h-[340px] sm:mt-0">
          <img src="/phoneLady.png" alt="Lady" class="w-[320px] h-[340px]" />
        </div>
      </div>
    </section>

    <section class="flex items-center justify-center flex-col mt-[5rem]">
      <div class="text-green text-center">
        <h1 class="text-3xl font-light">We cover these</h1>
        <h3 class="font-black text-2xl tracking-wide">
          4 Zambian <span class="text-gold">markets.</span>
        </h3>
      </div>

      <div
        class="flex flex-col gap-3 mt-4 sm:grid sm:grid-cols-4 md:grid-cols-4"
      >
        <Card caption="Chisokoni" image="/chisokoni.png" buttonColor="gold" />
        <Card
          caption="Kalusambesa"
          image="/kalusambesa.png"
          buttonColor="green"
        />
        <Card caption="Soweto" image="/soweto.png" buttonColor="gold" />
        <Card caption="Ndola" image="/ndola.png" buttonColor="green" />
      </div>
    </section>

    <div
      class="flex flex-col items-center justify-center mt-[3rem] sm:mt-[5rem]"
      id="signUp"
    >
      <h3 class="text-2xl text-green">
        Sign Up for <span class="text-gold"> Shamba Data</span>
      </h3>
      <p class="text-center mt-4 mx-3 text-lg font-light">
        Our Service is priced at <span>K70/ month</span>. We will notify you
        once we launch
      </p>
    </div>

    <section
      class="justify-center flex relative mt-[2rem] md:max-w-[900px] lg:max-w-[1000px] mb-[3rem]"
    >
      <div class="md:flex">
        <div class="w-[300px] h-[600px] hidden md:block absolute md:left-0">
          <img src="/bottom.png" alt="Lady" class="w-[210px] h-[400px]" />
        </div>
        <form class="flex flex-col justify-center md:mt-[2rem] md:ml-[7rem]">
          <div class="flex flex-col">
            <label>Username</label>
            <input
              type="text"
              required
              id="userName"
              class="outline-none focus:outline-none border-[1px] border-slate-300 rounded-md py-2 text-gray-900 w-[250px] px-2"
            />
          </div>

          <div class="mt-5 flex flex-col">
            <label>Whatsapp Number</label>
            <input
              type="text"
              required
              id="whatsappNumber"
              class="outline-none focus:outline-none border-[1px] border-slate-300 rounded-md py-2 text-gray-900 w-[250px] px-2"
            />
          </div>

          <button
            type="submit"
            class="px-4 py-2 rounded-md bg-green cursor-pointer text-lg text-white font-medium mt-7 items-start w-[250px]"
            >Sign Up</button
          >
        </form>
      </div>
    </section>
  </main>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Welcome to Shamba Data.">
  <main class="font-sans mt-[3rem]">
    <Hero />

    <section
      class="mt-[2rem] pl-5 md:ml-[2rem] sm:mt-[5rem] sm:flex sm:justify-between sm:items-start"
    >
      <div class="flex gap-2">
        <div>
          <div class="bg-gold w-[23px] h-[70px]"></div>
          <div class="w-[23px] h-[40px] bg-green"></div>
        </div>

        <div class="flex-col flex">
          <h3 class="w-[250px] text-green font-light text-xl">
            Get the most accurate Data with
          </h3>
          <strong class="text-gold text-xl">Shamba Data</strong>
          <strong class="text-2xl text-green font-bold"
            >We are here for you!</strong
          >
        </div>
      </div>

      <div class="">
        <div class="w-[350px] h-[350px] sm:mt-0">
          <img src="/phoneLady.webp" alt="Lady" class="w-[350px] h-[350px]" />
        </div>
      </div>
    </section>

    <section class="flex items-center justify-center flex-col mt-[5rem]">
      <div class="text-green text-center">
        <h1 class="text-xl font-regular">We cover these</h1>
        <h3 class="font-bold text-2xl tracking-wide">
          4 Zambian <span class="text-gold">markets.</span>
        </h3>
      </div>

      <div
        class="flex flex-col gap-3 mt-7 sm:grid sm:grid-cols-4 md:grid-cols-4"
      >
        <Card caption="Chisokoni" image="/chisokoni.webp" buttonColor="gold" />
        <Card
          caption="Kalusambesa"
          image="/kalusambesa.webp"
          buttonColor="green"
        />
        <Card caption="Soweto" image="/soweto.webp" buttonColor="gold" />
        <Card caption="Ndola" image="/ndola.webp" buttonColor="green" />
      </div>
    </section>

    <div
      class="flex flex-col items-center justify-center mt-[3rem] sm:mt-[5rem]"
      id="signUp"
    >
      <h3 class="text-2xl text-green">
        Sign Up for <span class="text-gold"> Shamba Data</span>
      </h3>
      <p class="text-center mt-4 mx-3 text-lg font-light">
        Our Service is priced at <span class="text-green font-bold"
          >K70/ month</span
        >. We will notify you once we launch
      </p>
    </div>

    <section
      class="justify-center flex relative mt-[2rem] md:max-w-[700px] mb-[3rem]"
    >
      <div class="md:flex">
        <div class="w-[300px] h-[400px] hidden md:block">
          <img src="/bottom.webp" alt="Lady" class="w-[350px] h-[450px]" />
        </div>
        <form class="flex flex-col justify-center md:mt-[2rem] md:ml-[7rem]">
          <div class="flex flex-col">
            <label>Full Name</label>
            <input
              type="text"
              required
              id="userName"
              class="outline-none focus:outline-none border-[1px] border-slate-300 rounded-md py-2 text-gray-900 w-[250px] px-2 bg-transparent"
            />
          </div>

          <div class="mt-5 flex flex-col">
            <label>Whatsapp Number</label>
            <input
              type="text"
              required
              id="whatsappNumber"
              class="outline-none focus:outline-none border-[1px] border-slate-300 rounded-md py-2 text-gray-900 w-[250px] px-2 bg-transparent"
            />
          </div>

          <button
            type="submit"
            class="px-4 py-2 rounded-md bg-green cursor-pointer text-lg text-white font-medium mt-7 items-start w-[250px]"
            >Sign Up</button
          >
        </form>
      </div>
    </section>
  </main>
</Layout>
